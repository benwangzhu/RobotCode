    GLOBAL INTERRUPT DECL 3 WHEN $STOPMESS==TRUE DO IR_STOPM ( )
    INTERRUPT ON 3 
    BAS (#INITMOV,0 )
  ;ENDFOLD (BASISTECH INI)
  ;FOLD USER INI
    ;Make your modifications here

  ;ENDFOLD (USER INI)
;ENDFOLD (INI)
;********************************
;Pick program selection
;********************************


;FOLD PLC.RequestToContinue ;%{PE}
req_to_continue_()
;ENDFOLD
if $T1 or $T2 or $AUT then
   ;fold USER SELECT
   key = 1
   loop
      switch key
      case 1
         key = user_select_("DCD SELECT", "1", "2", "3", "4", "NEXT")
         if key == 5 then  
            key = 2
         else
            DicisionCode = key
            exit
         endif
      case 2
         key = user_select_("DCD SELECT", "PREV", "5", "6", "7", "8", "NEXT")
         if key == 1 then  
            key = 1
         else
            if key == 6 then 
               key = 3
            else
               DicisionCode = key + 3
               exit
            endif
         endif
      case 3
         key = user_select_("DCD SELECT", "PREV", "9", "10", "11", "12", "NEXT")
         if key == 1 then  
            key = 2
         else
            if key == 6 then 
               key = 4
            else
               DicisionCode = key + 7
               exit
            endif
         endif
      case 4
         key = user_select_("DCD SELECT", "PREV", "13", "14", "15", "16")
         if key == 1 then  
            key = 3
         else
            DicisionCode = key + 11
            exit
         endif
      ENDSWITCH
   endloop
   ;endfold
else
   DicisionCode =  ContDicitionCode
endif

switch DicisionCode
case 1
    D15_DROPOFF01()
case 2
    D15_DROPOFF02()
case 3
    D15_DROPOFF03()
case 4
    D15_DROPOFF04()
case 5
    D15_DROPOFF05()
DEFAULT
    Offset = 0
    str_clear_(Msg[])
    swrite(Msg[], State, Offset, "Dicision Code Error![DicisionCode:%d]", DicisionCode)
    err_write_("Speedbot", Msg[] , true)
    halt
ENDSWITCH


END